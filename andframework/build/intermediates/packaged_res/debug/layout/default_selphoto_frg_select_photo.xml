<?xml version="1.0" encoding="UTF-8"?>

                                                       
                                                   

    

                 
                    
                                                       

                 
                    
                                                                  

                                                                                              
           

    <com.mdx.framework.autofit.layout.FitLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:tag="layout/default_selphoto_frg_select_photo_0"                                      
        app:saveApi=''
        app:updateApi=''  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="@color/actionBarColor">

            <ImageButton
                android:id="@+id/back"
                style="@style/photoShowAction"
                android:contentDescription="@string/contentDescription"
                android:tag="binding_1"            
                android:scaleType="fitXY" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:tag="binding_2"                                                   >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:maxLength="15"
                    android:tag="binding_3"                     
                    android:textColor="@color/actionTextColor"
                    android:textSize="16sp" />

                <com.mdx.framework.widget.MImageView
                    android:layout_width="13dip"
                    android:layout_height="7dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="2dip"
                    android:src="@drawable/navigationbar_arrow_down"
                    app:toColor="@color/actionArrowDownColor" />
            </LinearLayout>


            <TextView
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/actionTextColor"
                android:textSize="14sp" />
        </RelativeLayout>

        <com.mdx.framework.widget.pagerecycleview.MRecyclerView
            android:id="@+id/recycleview"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            app:column="4" />
    </com.mdx.framework.autofit.layout.FitLinearLayout>
         