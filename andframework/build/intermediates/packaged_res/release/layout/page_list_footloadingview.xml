<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/j60dp"
    android:gravity="center"
    android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="@dimen/j20dp"
        android:layout_height="@dimen/j20dp"
        android:layout_marginRight="@dimen/j10dp"
        android:indeterminate="false"
        android:indeterminateTint="@color/A" />

    <TextView
        android:id="@+id/tv_loading"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/j60dp"
        android:gravity="center"
        android:text="@string/footer_loading"
        android:textColor="#666666"
        android:textSize="16sp" />
</LinearLayout>

