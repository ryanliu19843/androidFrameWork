<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="F"
            type="com.mdx.framework.autofit.AutoFit" />

        <variable
            name="P"
            type="com.mdx.framework.autofit.commons.AutoParams" />

        <variable
            name="item"
            type="com.mdx.framework.autofit.commons.MIT" />


        <import type="com.mdx.framework.autofit.commons.MIT" />
    </data>

    <LinearLayout
        android:id="@+id/navitem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.mdx.framework.widget.MImageView
            android:id="@+id/title_img"
            android:layout_width="@dimen/nav_imgsize"
            android:layout_height="@dimen/nav_imgsize" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.name}"
            android:textColor="@drawable/nav_txt_color"
            android:textSize="@dimen/nav_txt_size" />

    </LinearLayout>
</layout>